<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.tv.core.mapper.IssuedMapper">

    <select id="getObjByType" parameterType="java.lang.Integer" resultType="com.cloud.tv.entity.Task">
        SELECT * FROM metoo_task where type=#{type}
    </select>

    <select id="query" resultType="com.cloud.tv.entity.Task">
        SELECT * FROM metoo_task
    </select>

    <insert id="save" parameterType="com.cloud.tv.entity.Task" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO metoo_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            total,`type`, finished
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{total}, #{type},   #{finished}
        </trim>
    </insert>

    <update id="update" parameterType="com.cloud.tv.entity.Task">
        update metoo_task
        <set>
            total =  #{total},
            `type` = #{type},
            finished = #{finished}
        </set>
        where id=#{id}
    </update>

</mapper>