<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.tv.core.mapper.PolicyMapper">

    <select id="getObjById" parameterType="java.lang.String" resultType="com.cloud.tv.entity.Policy">
        SELECT * FROM metoo_policy
        WHERE id = #{id}
    </select>

    <select id="getObjByParentId" parameterType="java.lang.String" resultType="com.cloud.tv.entity.Policy">
        SELECT * FROM metoo_policy
        WHERE parentId = #{parentId} and deviceUuid = #{deviceUuid}
    </select>

    <select id="getObjOrderNo" parameterType="java.lang.String" resultType="com.cloud.tv.entity.Policy">
        SELECT * FROM metoo_policy
        WHERE orderNo = #{orderNo}
    </select>

    <select id="getObjByMap" resultType="com.cloud.tv.entity.Policy">
        SELECT * FROM metoo_policy
        WHERE parentName = #{parentName} or `name` = #{name} and deviceUuid = #{deviceUuid}
    </select>



    <delete id="delete" parameterType="com.cloud.tv.entity.Policy">
        DELETE FROM metoo_policy
        WHERE parentName = #{parentName} or `name` = #{name} and deviceUuid = #{deviceUuid}
    </delete>

