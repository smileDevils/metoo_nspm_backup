<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.tv.core.mapper.InvisibleMapper">


    <select id="query" resultType="com.cloud.tv.entity.Invisible">
        SELECT * FROM metoo_invisible where status = 0;
    </select>

    <update id="update" parameterType="com.cloud.tv.entity.Invisible">
        UPDATE metoo_invisible
        <set>
            <if test="status != null">
                status = #{status}
            </if>
        </set>
        where `name` = #{name}
    </update>

</mapper>