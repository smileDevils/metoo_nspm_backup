          </if>
          <if test = "title != null and title != ''">
              AND mrp.roomTitle LIKE CONCAT('%', #{title}, '%')
          </if>
          <if test="userId != null">
              AND userId = #{userId}
          </if>
          AND mrp.deleteStatus = 0
      </where>

    </select>


